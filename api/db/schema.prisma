datasource DS {
  // optionally set multiple providers
  // example: provider = ["sqlite", "postgresql"]
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Activity {
  id          Int           @id @default(autoincrement())
  name        String
  icon        String
  PlanWorkout PlanWorkout[]
}

model PlanWorkout {
  id          Int       @id @default(autoincrement())
  dayOfWeek   DayOfWeek
  activity    Activity  @relation(fields: [activityId], references: [id])
  targetMiles String
  targetTime  String
  targetNotes String
  activityId  Int
}

enum DayOfWeek {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}
